<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css">
    <title>Member Area</title>
</head>
<body>
    <div class="container">
      
        <div class="mt-5 mb-2">
          <h3>Member Area</h3>
          <button class="btn btn-primary" onclick="location.href='/register'">Tambah Member</button>  <button class="btn btn-default" onclick="location.href='/login'">Logout</button> 
        </div>
        <table id="example" class="display" style="width:100%">
            <thead>
              <tr>
                <th scope="col">No</th>
                <th scope="col">Email</th>
                <th scope="col">Mobile Phone</th>
                <th scope="col">Address</th>
                <th scope="col">Actioon</th>
              </tr>
            </thead>
            <tbody>
                <% members.forEach((members, index) => { %>
              <tr>
                <td scope="row"><%= index+1 %></td>
                <td><%= members.email %></td>
                <td><%= members.mobilephone %></td>
                <td><%= members.alamat %></td>
                <td><a href="/edit/<%= members.id %>" class="btn btn-success">Edit</a> 
                  <a href="/remove/<%= members.id %>" class="btn btn-danger">Remove</a>
                  <a href="/score/<%= members.id %>" class="btn btn-warning">Score</a>  </td>
              </tr>
              <% })%>
            </tbody>
            <tfoot>
              <tr>
                <th scope="col">No</th>
                <th scope="col">Email</th>
                <th scope="col">Mobile Phone</th>
                <th scope="col">Address</th>
                <th scope="col">Actioon</th>
              </tr>
          </tfoot>
          </table>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
   <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>

   <script>
    $(document).ready(function() {
          $('#example').DataTable();
    } );
  </script>
</body>
</html>
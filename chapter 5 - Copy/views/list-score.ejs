<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css"
    />
    <title>Halaman Scoring</title>
  </head>
  <body>
    <div class="container mt-5" id="addRecord" style="display: none">
      <h2>Tambah Scoring Point</h2>
      <form action="/create-point" method="POST">
        <div class="form-group">
          <input
            name="user_id"
            type="hidden"
            class="form-control"
            value="<%= members.id %>"
            readonly
          />
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1">Nama Game</label>
          <input name="game_name" type="text" class="form-control" />
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1">Tanggal</label>
          <input name="game_date" type="date" class="form-control" />
        </div>
        <div class="form-group">
          <label for="scoringPoint">Scoring Point</label>
          <input name="game_point" type="number" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
        <button class="btn btn-default" onclick="batal()">Batal</button>
      </form>
    </div>
    <div class="container mt-5">
      <h2>Daftar Member</h2>
      <div class="mt-5 mb-2">
        <div class="row">
          <div class="col-md-1">Id</div>
          <div class="col-md-4">: <%= members.id %></div>
        </div>
        <div class="row">
          <div class="col-md-1">Email</div>
          <div class="col-md-4">: <%= members.email %></div>
        </div>
        <div class="row">
          <div class="col-md-1">Alamat</div>
          <div class="col-md-4">: <%= members.alamat %></div>
        </div>
        <p></p>
        <button class="btn btn-primary" onclick="addRecord()">
          Tambah Point
        </button>
        <a class="btn btn-default" href="/list-member">List Member</a>
      </div>
      <table class="display" id="example">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Email</th>
            <th scope="col">Mobile Phone</th>
            <th scope="col">Address</th>
            <th scope="col">Actioon</th>
          </tr>
        </thead>
        <tbody>
          <% scorings.forEach((scoring, index) => { %>
          <tr>
            <th scope="row"><%= index+1 %></th>
            <td><%= scoring.game_date %></td>
            <td><%= scoring.game_name %></td>
            <td><%= scoring.game_point %></td>
            <td>
              <a
                href="/remove/point/<%= scoring.user_id %>/<%= scoring.id %>"
                class="btn btn-danger"
                >Remove</a
              >
            </td>
          </tr>
          <% })%>
        </tbody>

        <tfoot>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Email</th>
            <th scope="col">Mobile Phone</th>
            <th scope="col">Address</th>
            <th scope="col">Actioon</th>
          </tr>
        </tfoot>
      </table>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>

    <script>
      $(document).ready(function () {
        $("#example").DataTable();
      });
    </script>
    <script>
      function addRecord() {
        document.getElementById("addRecord").style.display = "block";
      }
      function batal() {
        document.getElementById("addRecord").style.display = "none";
      }
    </script>

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
